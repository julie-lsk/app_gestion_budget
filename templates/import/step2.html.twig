{% extends 'base.html.twig' %}

{% block title %}Import CSV - Étape 2{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Importation CSV - Étape 2 : Mappage</h1>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Colonnes disponibles :</label>
                {% for header in headers %}
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="mapping[date]" value="{{ header }}">
                        <label class="form-check-label">Date ({{ header }})</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="mapping[montant]" value="{{ header }}">
                        <label class="form-check-label">Montant ({{ header }})</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="mapping[categorie]" value="{{ header }}">
                        <label class="form-check-label">Catégorie ({{ header }})</label>
                    </div>
                {% endfor %}
            </div>
            <button type="submit" class="btn btn-primary">Importer</button>
        </form>
    </div>
{% endblock %}
