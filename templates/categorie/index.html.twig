{% block body %}
    <div class="container my-5">
        <div class="mb-3 text-end">
            <a href="{{ path('categorie_new') }}" class="btn btn-primary mt-4 mb-5">➕ Ajouter une catégorie</a>
        </div>

        <ul class="list-group">
            {% for categorie in categories %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ categorie.nom }}
                    <div>
                        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-primary">✏️ Modifier</a>
                        <a href="{{ path('categorie_delete', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-danger">🗑️ Supprimer</a>
                    </div>
                </li>
            {% else %}
                <li class="list-group-item">Aucune catégorie enregistrée.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

