{% block body %}

    <h2 class="border-bottom pb-3 mb-4 fs-3 text">Bienvenue sur votre dashboard !</h2>

    <div class="container">
        <div class="row mb-4">
            <div class="col border p-3 shadow-sm bg-light me-3">
                <h3 class="mb-3 fw-bold">Mes revenus</h3>
                <div>
                    {% set quickchart_revenus_url =
                        'https://quickchart.io/chart?c=' ~
                        ('{"type":"bar","data":{"labels":' ~ revenusLabels ~ ',"datasets":[{"label":"Revenus","data":' ~ revenusData ~ '}]},"options":{"plugins":{"legend":{"display":true}}}}' | url_encode)
                    %}
                    <img src="{{ quickchart_revenus_url }}" alt="Graphique revenus" style="max-width:400px;" />
                </div>
            </div>
            <div class="col border p-3 shadow-sm bg-light">
                <h3 class="mb-3 fw-bold">Mes dépenses</h3>
                        <div>
                            {% set quickchart_depenses_url =
                                'https://quickchart.io/chart?c=' ~
                                ('{"type":"line","data":{"labels":' ~ depensesLabels ~ ',"datasets":[{"label":"Dépenses","data":' ~ depensesData ~ ',"fill":false,"borderColor":"rgba(255,99,132,1)","backgroundColor":"rgba(255,99,132,0.3)","tension":0.2}]},"options":{"plugins":{"legend":{"display":true}}}}' | url_encode)
                            %}
                            <img src="{{ quickchart_depenses_url }}" alt="Graphique dépenses" style="max-width:400px;" />
                        </div>
                    </div>
                </div>

        <div class="row">
            <div class="col border p-3 shadow-sm bg-light me-3">
                <h3 class="mb-3 fw-bold">Dernières opérations</h3>

                <p>petite liste des 5 dernières transactions à mettre (date, montant, type de transaction)</p>
            </div>

            <div class="col border p-3 shadow-sm bg-light me-3">
                <h3 class="mb-3 fw-bold">Mes dépenses par catégorie</h3>
                <div>
                    {% set quickchart_depenses_cat_url =
                        'https://quickchart.io/chart?c=' ~
                        ('{"type":"pie","data":{"labels":' ~ depensesCategorieLabels ~ ',"datasets":[{"label":"Dépenses par catégorie","data":' ~ depensesCategorieData ~ '}]},"options":{"plugins":{"legend":{"display":true,"position":"bottom"}}}}' | url_encode)
                    %}
                    <img src="{{ quickchart_depenses_cat_url }}" alt="Dépenses par catégorie" style="max-width:350px;" />
                </div>
            </div>
            <div class="col border p-3 shadow-sm bg-light">
                <h3 class="mb-3 fw-bold">Mes revenus par catégorie</h3>
                <div>
                    {% set quickchart_revenus_cat_url =
                        'https://quickchart.io/chart?c=' ~
                        ('{"type":"doughnut","data":{"labels":' ~ revenusCategorieLabels ~ ',"datasets":[{"label":"Revenus par catégorie","data":' ~ revenusCategorieData ~ '}]},"options":{"plugins":{"legend":{"display":true,"position":"bottom"}}}}' | url_encode)
                    %}
                    <img src="{{ quickchart_revenus_cat_url }}" alt="Revenus par catégorie" style="max-width:350px;" />
                </div>
            </div>

        </div>
    </div>

{% endblock %}
