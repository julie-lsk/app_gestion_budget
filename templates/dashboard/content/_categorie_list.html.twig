<ul class="list-group">
    {% if categories|length > 0 %}
        {% for categorie in categories %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ categorie.nom }}
                <div>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-primary">✏️ Modifier</a>
                    <a href="{{ path('categorie_delete', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-danger">🗑️ Supprimer</a>
                </div>
            </li>
        {% endfor %}
    {% else %}
        <li class="list-group-item">Aucune catégorie enregistrée.</li>
    {% endif %}
</ul>
